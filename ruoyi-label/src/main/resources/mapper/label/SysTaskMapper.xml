<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.label.mapper.SysTaskMapper">
    
    <resultMap type="SysTask" id="SysTaskResult">
        <result property="taskId"    column="task_id"    />
        <result property="packageId"    column="package_id"    />
        <result property="audioFileName"    column="audio_file_name"    />
        <result property="audioFilePath"    column="audio_file_path"    />
        <result property="textGrid"    column="text_grid"    />
        <result property="originalTextGrid"    column="original_text_grid"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="packageAssigner" column="package_assigner" />
        <result property="packageType" column="package_type" />
        <result property="packageName" column="package_name" />
        <result property="projectName" column="project_name" />
        <result property="passTime" column="pass_time" />
        <result property="duration" column="duration" />
    </resultMap>

    <resultMap id="TaskStatisticsResult" type="map">
        <result property="userName" column="user_name"/>
        <result property="nickName" column="nick_name"/>
        <result property="unstartCount" column="unstart_count"/>
        <result property="underwayCount" column="underway_count"/>
        <result property="pendingReviewCount" column="pending_review_count"/>
        <result property="rejectCount" column="reject_count"/>
        <result property="passCount" column="pass_count"/>
        <result property="passDuration" column="pass_duration"/>
    </resultMap>

    <sql id="selectSysTaskVo">
        select
            t.task_id,
            t.package_id,
            t.audio_file_name,
            t.audio_file_path,
            t.text_grid,
            t.original_text_grid,
            t.status,
            t.create_by,
            t.create_time,
            t.update_by,
            t.update_time,
            t.remark,
            t.pass_time,
            t.duration,
			p.type as package_type,
            p.assigner as package_assigner,
            p.name as package_name
        from sys_task t
        left join sys_task_package p on t.package_id = p.task_package_id
    </sql>
    
    <sql id="selectSysTaskVoWithPackage">
        select
            t.task_id,
            t.package_id,
            t.audio_file_name,
            t.audio_file_path,
            t.text_grid,
            t.original_text_grid,
            t.status,
            t.create_by,
            t.create_time,
            t.update_by,
            t.update_time,
            t.remark,
            t.pass_time,
            t.duration,
            p.type as package_type,
            p.assigner as package_assigner,
            p.name as package_name
        from sys_task t
        left join sys_task_package p on t.package_id = p.task_package_id
    </sql>

    <select id="selectSysTaskList" parameterType="SysTask" resultMap="SysTaskResult">
        <include refid="selectSysTaskVo"/>
        <where>  
            <if test="audioFileName != null  and audioFileName != ''"> and t.audio_file_name like concat('%', #{audioFileName}, '%')</if>
            <if test="status != null  and status != ''"> and t.status = #{status}</if>
            <if test="params.beginCreateBy != null and params.beginCreateBy != '' and params.endCreateBy != null and params.endCreateBy != ''"> and t.create_by between #{params.beginCreateBy} and #{params.endCreateBy}</if>
            <if test="packageId != null and packageId != ''"> and t.package_id = #{packageId}</if>
            <if test="createBy != null  and createBy != ''"> and t.create_by = #{createBy}</if>
        </where>
    </select>
    
    <select id="selectSysTaskByTaskId" parameterType="Long" resultMap="SysTaskResult">
        <include refid="selectSysTaskVo"/>
        where t.task_id = #{taskId}
    </select>

    <select id="countTaskByPackageId" parameterType="Long" resultType="int">
        select count(1) from sys_task
        where package_id = #{packageId}
    </select>

    <insert id="insertSysTask" parameterType="SysTask" useGeneratedKeys="true" keyProperty="taskId">
        insert into sys_task
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="packageId != null">package_id,</if>
            <if test="audioFileName != null and audioFileName != ''">audio_file_name,</if>
            <if test="audioFilePath != null and audioFilePath != ''">audio_file_path,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
            <if test="textGrid != null">text_grid,</if>
            <if test="originalTextGrid != null">original_text_grid,</if>
            <if test="passTime != null">pass_time,</if>
            <if test="duration != null">duration,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="packageId != null">#{packageId},</if>
            <if test="audioFileName != null and audioFileName != ''">#{audioFileName},</if>
            <if test="audioFilePath != null and audioFilePath != ''">#{audioFilePath},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
            <if test="textGrid != null">#{textGrid},</if>
            <if test="originalTextGrid != null">#{originalTextGrid},</if>
            <if test="passTime != null">#{passTime},</if>
            <if test="duration != null">#{duration},</if>
         </trim>
    </insert>

    <update id="updateSysTask" parameterType="SysTask">
        update sys_task
        <trim prefix="SET" suffixOverrides=",">
            <if test="packageId != null">package_id = #{packageId},</if>
            <if test="audioFileName != null and audioFileName != ''">audio_file_name = #{audioFileName},</if>
            <if test="audioFilePath != null and audioFilePath != ''">audio_file_path = #{audioFilePath},</if>
            <if test="textGrid != null and textGrid != ''">text_grid = #{textGrid},</if>
            <if test="originalTextGrid != null and originalTextGrid != ''">original_text_grid = #{originalTextGrid},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="passTime != null">pass_time = #{passTime},</if>
            <if test="duration != null">duration = #{duration},</if>
        </trim>
        where task_id = #{taskId}
    </update>

    <delete id="deleteSysTaskByTaskId" parameterType="Long">
        delete from sys_task where task_id = #{taskId}
    </delete>

    <delete id="deleteSysTaskByTaskIds" parameterType="String">
        delete from sys_task where task_id in 
        <foreach item="taskId" collection="array" open="(" separator="," close=")">
            #{taskId}
        </foreach>
    </delete>
    
    <update id="updateSysTaskStatusByPackageId" parameterType="SysTask">
        update sys_task
        <trim prefix="SET" suffixOverrides=",">
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where package_id = #{packageId}
    </update>
    
    <select id="selectAuditorTaskList" resultMap="SysTaskResult">
        <include refid="selectSysTaskVoWithPackage"/>
        <where>
            <if test="sysTask.packageId != null and sysTask.packageId != ''"> and t.package_id = #{sysTask.packageId}</if>
            <if test="sysTask.status != null and sysTask.status != ''"> and t.status = #{sysTask.status}</if>
            <if test="auditor != null and auditor != ''"> and p.auditor = #{auditor}</if>
        </where>
    </select>
    
    <select id="selectCreatorTaskList" resultMap="SysTaskResult">
        select
            t.task_id,
            t.package_id,
            t.audio_file_name,
            t.audio_file_path,
            t.text_grid,
            t.original_text_grid,
            t.status,
            t.create_by,
            t.create_time,
            t.update_by,
            t.update_time,
            t.remark,
            t.pass_time,
            t.duration,
			p.type as package_type,
            p.assigner as package_assigner,
            p.name as package_name,
            pr.name as project_name
        from sys_task t
        left join sys_task_package p on t.package_id = p.task_package_id
        left join sys_project pr on p.project_id = pr.project_id
        <where>  
            <if test="projectName != null  and projectName != ''"> and pr.name like concat('%', #{projectName}, '%')</if>
            <if test="task_status != null  and task_status != ''"> and t.status = #{task_status}</if>
            <if test="creator != null  and creator != ''"> and t.create_by = #{creator}</if>
        </where>
    </select>
    
    <select id="selectSysTaskListByTaskIds" resultMap="SysTaskResult">
        <include refid="selectSysTaskVo"/>
        where t.task_id in
        <foreach item="taskId" collection="array" open="(" separator="," close=")">
            #{taskId}
        </foreach>
    </select>
    
    <select id="getTaskStatisticsByDeptId" resultMap="TaskStatisticsResult">
        SELECT 
            assigner_user.user_name,
            assigner_user.nick_name,
            SUM(CASE WHEN t.status = 'unstart' THEN 1 ELSE 0 END) AS unstart_count,
            SUM(CASE WHEN t.status = 'underway' THEN 1 ELSE 0 END) AS underway_count,
            SUM(CASE WHEN t.status = 'pending_review' THEN 1 ELSE 0 END) AS pending_review_count,
            SUM(CASE WHEN t.status = 'reject' THEN 1 ELSE 0 END) AS reject_count,
            SUM(CASE WHEN t.status = 'pass' THEN 1 ELSE 0 END) AS pass_count,
            SUM(CASE WHEN t.status = 'pass' THEN t.duration ELSE 0 END) AS pass_duration
        FROM sys_task t
        JOIN sys_task_package p ON t.package_id = p.task_package_id
        JOIN sys_user assigner_user ON p.assigner = assigner_user.user_name
        JOIN sys_user_role ur ON assigner_user.user_id = ur.user_id
        JOIN sys_role r ON ur.role_id = r.role_id
        <where>
            r.role_key = 'label_worker'
            <if test="deptId != null"> AND assigner_user.dept_id = #{deptId}</if>
        </where>
        GROUP BY assigner_user.user_name, assigner_user.nick_name
        ORDER BY assigner_user.user_name
    </select>
</mapper>